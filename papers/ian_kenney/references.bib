	author = {Wilson, Katie A. and Wang, Lily and Lin, Yie Chang and O'Mara, Megan L.},
	month = jan,
	year = {2021},
	keywords = {lLipid-protein interactions, mMembrane analysis, mMembrane transporters, mMolecular dynamics, nNeuronal membrane, SLC6 transport proteins},
	pages = {100010},
}

