	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/jcc.21777},
	keywords = {2′-hydroxyl, Watson Crick base pairs, empirical force field, molecular dynamics, quantum mechanics, ribonucleic acid},
	pages = {1929--1943},
}

